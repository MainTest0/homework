package ch04;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class NewArticle {

	public static void main(String[] args) {
		// 파일 입출력을 활용해서 코드를 작성해 주세요
		// 입력 대상 : article1.txt
		// 출력 대상 : today_article.txt
		
		char[] buf = {'뉴', '스', '이', '름', ':', 'M','V','C'};
		char[] name = {'작','성','자',':','이','치','승'};
		
		try {
			FileReader fr = new FileReader("article1.txt");
			FileWriter fw = new FileWriter("today_article.txt");
			fw.write(buf);
			while((fr.read()) != -1) {
				System.out.print((char)fr.read());
			}
			fw.write(name);
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		
		
	}// end of main

} // end of class
